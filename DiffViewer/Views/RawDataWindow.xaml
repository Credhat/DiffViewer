        <!--  IsReadOnly="True"  -->
        <TextBox Name="RawTextBox"
                 Grid.Row="2"
                 Margin="0,4,0,0"
                 FontSize="12"
                 IsReadOnlyCaretVisible="True"
                 PreviewMouseWheel="RawTextBox_PreviewMouseWheel"
                 ScrollViewer.CanContentScroll="True"
                 ScrollViewer.VerticalScrollBarVisibility="Auto"
                 Text="{Binding Raw}" />
    </Grid>
</Window>
